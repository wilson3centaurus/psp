<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Admin Dashboard | PSP</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <script>
    // Set theme immediately to prevent flash
    (function() {
      const theme = localStorage.getItem('psp-theme') || 'dark';
      document.documentElement.setAttribute('data-theme', theme);
    })();
  </script>
  <link rel="stylesheet" href="/css/style.css">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">
  <link rel="icon" type="image/png" href="/assets/logo.png">
</head>
<body>
  <div class="app-container">
    <!-- Sidebar -->
    <aside class="sidebar">
      <div class="sidebar-header">
        <div class="logo">
          <i class="fas fa-graduation-cap"></i>
          <span>PSP Admin</span>
        </div>
        <button class="theme-toggle" id="themeToggle" title="Toggle theme">
          <i class="fas fa-moon"></i>
        </button>
      </div>
      <nav class="sidebar-nav">
        <a href="/admin/dashboard" class="nav-item active"><i class="fas fa-gauge"></i><span>Dashboard</span></a>
        <a href="/admin/schools" class="nav-item"><i class="fas fa-school"></i><span>Schools</span></a>
        <a href="/admin/teachers" class="nav-item"><i class="fas fa-chalkboard-teacher"></i><span>Teachers</span></a>
        <a href="/admin/students" class="nav-item"><i class="fas fa-user-graduate"></i><span>Students</span></a>
        <a href="/admin/resources" class="nav-item"><i class="fas fa-boxes-stacked"></i><span>Resources</span></a>
        <a href="/admin/attendance" class="nav-item"><i class="fas fa-calendar-check"></i><span>Attendance</span></a>
        <a href="/admin/analytics" class="nav-item"><i class="fas fa-chart-pie"></i><span>Analytics</span></a>
        <a href="/admin/reports" class="nav-item"><i class="fas fa-file-alt"></i><span>Reports</span></a>
        <a href="/itadmin" class="nav-item"><i class="fas fa-user-shield"></i><span>IT Admins</span></a>
      </nav>
    </aside>

    <!-- Main Content -->
    <div class="main-content">
      <header class="topbar">
        <button class="menu-toggle" id="menuToggle">
          <i class="fas fa-bars"></i>
        </button>
        <h1 class="page-title">Control Center</h1>
        <div class="topbar-actions">
          <a href="/logout" class="btn btn-ghost"><i class="fas fa-sign-out-alt"></i></a>
        </div>
      </header>

      <main class="content">
        <p style="margin-bottom: 1.5rem; opacity: 0.8;">
          <i class="fas fa-lightbulb"></i> Quick links to manage schools, teachers, students, resources, attendance, and reports.
        </p>

        <!-- Quick Access Grid -->
        <div class="stats-grid">
          <a href="/admin/schools" class="stat-card" style="text-decoration: none;">
            <div class="stat-icon" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
              <i class="fas fa-school"></i>
            </div>
            <div class="stat-info">
              <span class="stat-value">Schools</span>
              <span class="stat-label">Manage all schools</span>
            </div>
          </a>

          <a href="/admin/teachers" class="stat-card" style="text-decoration: none;">
            <div class="stat-icon" style="background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%);">
              <i class="fas fa-chalkboard-teacher"></i>
            </div>
            <div class="stat-info">
              <span class="stat-value">Teachers</span>
              <span class="stat-label">View all teachers</span>
            </div>
          </a>

          <a href="/admin/students" class="stat-card" style="text-decoration: none;">
            <div class="stat-icon" style="background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);">
              <i class="fas fa-user-graduate"></i>
            </div>
            <div class="stat-info">
              <span class="stat-value">Students</span>
              <span class="stat-label">View all students</span>
            </div>
          </a>

          <a href="/admin/resources" class="stat-card" style="text-decoration: none;">
            <div class="stat-icon" style="background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);">
              <i class="fas fa-boxes-stacked"></i>
            </div>
            <div class="stat-info">
              <span class="stat-value">Resources</span>
              <span class="stat-label">Resource summary</span>
            </div>
          </a>

          <a href="/admin/attendance" class="stat-card" style="text-decoration: none;">
            <div class="stat-icon" style="background: linear-gradient(135deg, #fa709a 0%, #fee140 100%);">
              <i class="fas fa-calendar-check"></i>
            </div>
            <div class="stat-info">
              <span class="stat-value">Attendance</span>
              <span class="stat-label">Weekly overview</span>
            </div>
          </a>

          <a href="/admin/analytics" class="stat-card" style="text-decoration: none;">
            <div class="stat-icon" style="background: linear-gradient(135deg, #a18cd1 0%, #fbc2eb 100%);">
              <i class="fas fa-chart-pie"></i>
            </div>
            <div class="stat-info">
              <span class="stat-value">Analytics</span>
              <span class="stat-label">Insights & ratios</span>
            </div>
          </a>

          <a href="/admin/reports" class="stat-card" style="text-decoration: none;">
            <div class="stat-icon" style="background: linear-gradient(135deg, #ff9a9e 0%, #fad0c4 100%);">
              <i class="fas fa-file-pdf"></i>
            </div>
            <div class="stat-info">
              <span class="stat-value">Reports</span>
              <span class="stat-label">Generate PDFs</span>
            </div>
          </a>

          <a href="/itadmin" class="stat-card" style="text-decoration: none;">
            <div class="stat-icon" style="background: linear-gradient(135deg, #84fab0 0%, #8fd3f4 100%);">
              <i class="fas fa-user-shield"></i>
            </div>
            <div class="stat-info">
              <span class="stat-value">IT Admins</span>
              <span class="stat-label">Manage admins</span>
            </div>
          </a>
        </div>

        <!-- Tips Card 
        <div class="card" style="margin-top: 1.5rem;">
          <div class="card-header">
            <h3><i class="fas fa-lightbulb"></i> Quick Tips</h3>
          </div>
          <div style="padding: 1rem;">
            <p>Use the sidebar to navigate between sections. Toggle dark mode using the <i class="fas fa-moon"></i> button in the sidebar. The theme preference is saved automatically.</p>
          </div>
        </div>-->
      </main>

      <footer class="footer">
        <p>&copy; 2025 Primary School Performance System</p>
      </footer>
    </div>
  </div>

  <script src="/js/main.js"></script>
  <script>
    // Initialize theme from localStorage
    const savedTheme = localStorage.getItem('theme') || 'light';
    document.documentElement.setAttribute('data-theme', savedTheme);
    const themeIcon = document.querySelector('#themeToggle i');
    if (themeIcon) {
      themeIcon.className = savedTheme === 'dark' ? 'fas fa-sun' : 'fas fa-moon';
    }
  </script>
</body>
</html>
