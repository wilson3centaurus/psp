<!DOCTYPE html>
<html lang="en" data-theme="light">
<head>
  <meta charset="UTF-8">
  <title>Resources | Admin</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/css/style.css">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">
</head>
<body>
  <div class="app-container">
    <!-- Sidebar -->
    <aside class="sidebar">
      <div class="sidebar-header">
        <div class="logo">
          <i class="fas fa-graduation-cap"></i>
          <span>PSP Admin</span>
        </div>
        <button class="theme-toggle" id="themeToggle" title="Toggle theme">
          <i class="fas fa-moon"></i>
        </button>
      </div>
      <nav class="sidebar-nav">
        <a href="/admin/dashboard" class="nav-item"><i class="fas fa-gauge"></i><span>Dashboard</span></a>
        <a href="/admin/schools" class="nav-item"><i class="fas fa-school"></i><span>Schools</span></a>
        <a href="/admin/teachers" class="nav-item"><i class="fas fa-chalkboard-teacher"></i><span>Teachers</span></a>
        <a href="/admin/students" class="nav-item"><i class="fas fa-user-graduate"></i><span>Students</span></a>
        <a href="/admin/resources" class="nav-item active"><i class="fas fa-boxes-stacked"></i><span>Resources</span></a>
        <a href="/admin/attendance" class="nav-item"><i class="fas fa-calendar-check"></i><span>Attendance</span></a>
        <a href="/admin/analytics" class="nav-item"><i class="fas fa-chart-pie"></i><span>Analytics</span></a>
        <a href="/admin/reports" class="nav-item"><i class="fas fa-file-alt"></i><span>Reports</span></a>
        <a href="/itadmin" class="nav-item"><i class="fas fa-user-shield"></i><span>IT Admins</span></a>
      </nav>
    </aside>

    <!-- Main Content -->
    <div class="main-content">
      <header class="topbar">
        <button class="menu-toggle" id="menuToggle">
          <i class="fas fa-bars"></i>
        </button>
        <h1 class="page-title">Resources Overview</h1>
        <div class="topbar-actions">
          <span class="badge badge-info"><i class="fas fa-building-columns"></i> <%= totals.totalSchools || 0 %> Schools</span>
          <a href="/admin/dashboard" class="btn btn-ghost"><i class="fas fa-home"></i></a>
          <a href="/logout" class="btn btn-ghost"><i class="fas fa-sign-out-alt"></i></a>
        </div>
      </header>

      <main class="content">
        <% if (success_msg && String(success_msg).trim() !== "") { %>
          <div class="alert alert-success"><i class="fas fa-check-circle"></i> <%= success_msg %></div>
        <% } %>
        <% if (error_msg && String(error_msg).trim() !== "") { %>
          <div class="alert alert-danger"><i class="fas fa-exclamation-circle"></i> <%= error_msg %></div>
        <% } %>

        <!-- Stats Grid -->
        <div class="stats-grid">
          <div class="stat-card">
            <div class="stat-icon" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
              <i class="fas fa-layer-group"></i>
            </div>
            <div class="stat-info">
              <span class="stat-value"><%= totals.subjects || 0 %></span>
              <span class="stat-label">Subjects Tracked</span>
            </div>
          </div>
          <div class="stat-card">
            <div class="stat-icon" style="background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%);">
              <i class="fas fa-users"></i>
            </div>
            <div class="stat-info">
              <span class="stat-value"><%= totals.totalStudents || 0 %></span>
              <span class="stat-label">Total Students</span>
            </div>
          </div>
          <div class="stat-card">
            <div class="stat-icon" style="background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);">
              <i class="fas fa-book-open"></i>
            </div>
            <div class="stat-info">
              <span class="stat-value"><%= totals.totalBooks || 0 %></span>
              <span class="stat-label">Total Books</span>
            </div>
          </div>
          <div class="stat-card">
            <div class="stat-icon" style="background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);">
              <i class="fas fa-desktop"></i>
            </div>
            <div class="stat-info">
              <span class="stat-value"><%= totals.totalComputers || 0 %></span>
              <span class="stat-label">Total Computers</span>
            </div>
          </div>
        </div>

        <!-- Resources Table -->
        <div class="card" style="margin-top: 1.5rem;">
          <div class="card-header">
            <h3><i class="fas fa-table"></i> Resource Coverage by Subject</h3>
          </div>
          <div class="table-wrapper">
            <table>
              <thead>
                <tr>
                  <th>#</th>
                  <th>Subject</th>
                  <th>Students</th>
                  <th>Books</th>
                  <th>Computers</th>
                  <th>Records</th>
                  <th>Schools</th>
                </tr>
              </thead>
              <tbody>
                <% if (!summary || summary.length === 0) { %>
                  <tr>
                    <td colspan="7" style="text-align: center; padding: 2rem;">
                      <i class="fas fa-boxes-stacked" style="font-size: 2rem; opacity: 0.3;"></i>
                      <p style="margin-top: 0.5rem; opacity: 0.6;">No resource data available yet</p>
                    </td>
                  </tr>
                <% } else { %>
                  <% summary.forEach((row, idx) => { %>
                    <tr>
                      <td><%= idx + 1 %></td>
                      <td><strong><%= row.subject_name || 'Unknown subject' %></strong></td>
                      <td><%= row.total_students || 0 %></td>
                      <td><%= row.total_books || 0 %></td>
                      <td><%= row.total_computers || 0 %></td>
                      <td><span class="badge badge-primary"><%= row.record_count || 0 %></span></td>
                      <td><span class="badge badge-info"><%= row.school_count || 0 %></span></td>
                    </tr>
                  <% }) %>
                <% } %>
              </tbody>
            </table>
          </div>
        </div>
      </main>

      <footer class="footer">
        <p>&copy; 2025 Primary School Performance System</p>
      </footer>
    </div>
  </div>

  <script src="/js/main.js"></script>
  <script>
    // Initialize theme from localStorage
    const savedTheme = localStorage.getItem('theme') || 'light';
    document.documentElement.setAttribute('data-theme', savedTheme);
    const themeIcon = document.querySelector('#themeToggle i');
    if (themeIcon) {
      themeIcon.className = savedTheme === 'dark' ? 'fas fa-sun' : 'fas fa-moon';
    }
  </script>
</body>
</html>
