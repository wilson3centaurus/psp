<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Schools | PSP Admin</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <script>
    (function() {
      const theme = localStorage.getItem('psp-theme') || 'dark';
      document.documentElement.setAttribute('data-theme', theme);
    })();
  </script>
  <link rel="stylesheet" href="/css/style.css">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">
  <link rel="icon" type="image/png" href="/assets/logo.png">
</head>
<body>
  <div class="app-container">
    <!-- Sidebar -->
    <aside class="sidebar">
      <div class="sidebar-header">
        <div class="logo">
          <i class="fas fa-graduation-cap"></i>
          <span>PSP Admin</span>
        </div>
        <button class="theme-toggle" id="themeToggle" title="Toggle theme">
          <i class="fas fa-moon"></i>
        </button>
      </div>
      <nav class="sidebar-nav">
        <a href="/admin/dashboard" class="nav-item"><i class="fas fa-gauge"></i><span>Dashboard</span></a>
        <a href="/admin/schools" class="nav-item active"><i class="fas fa-school"></i><span>Schools</span></a>
        <a href="/admin/teachers" class="nav-item"><i class="fas fa-chalkboard-teacher"></i><span>Teachers</span></a>
        <a href="/admin/students" class="nav-item"><i class="fas fa-user-graduate"></i><span>Students</span></a>
        <a href="/admin/resources" class="nav-item"><i class="fas fa-boxes-stacked"></i><span>Resources</span></a>
        <a href="/admin/attendance" class="nav-item"><i class="fas fa-calendar-check"></i><span>Attendance</span></a>
        <a href="/admin/analytics" class="nav-item"><i class="fas fa-chart-pie"></i><span>Analytics</span></a>
        <a href="/admin/reports" class="nav-item"><i class="fas fa-file-alt"></i><span>Reports</span></a>
        <a href="/itadmin" class="nav-item"><i class="fas fa-user-shield"></i><span>IT Admins</span></a>
      </nav>
    </aside>

    <!-- Main Content -->
    <div class="main-content">
      <header class="topbar">
        <button class="menu-toggle" id="menuToggle">
          <i class="fas fa-bars"></i>
        </button>
        <h1 class="page-title">Schools</h1>
        <div class="topbar-actions">
          <span class="badge badge-primary"><%= schools.length %> schools</span>
          <a href="/admin/dashboard" class="btn btn-ghost"><i class="fas fa-home"></i></a>
          <a href="/logout" class="btn btn-ghost"><i class="fas fa-sign-out-alt"></i></a>
        </div>
      </header>

      <main class="content">
        <% if (success_msg && String(success_msg).trim() !== "") { %>
          <div class="alert alert-success"><i class="fas fa-check-circle"></i> <%= success_msg %></div>
        <% } %>
        <% if (error_msg && String(error_msg).trim() !== "") { %>
          <div class="alert alert-danger"><i class="fas fa-exclamation-circle"></i> <%= error_msg %></div>
        <% } %>

        <!-- Schools Table -->
        <div class="card">
          <div class="card-header">
            <h3><i class="fas fa-school"></i> All Registered Schools</h3>
          </div>
          <div class="table-wrapper">
            <table>
              <thead>
                <tr>
                  <th>#</th>
                  <th>Logo</th>
                  <th>School Name</th>
                  <th>Contact</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                <% if (!schools || schools.length === 0) { %>
                  <tr>
                    <td colspan="5" style="text-align: center; padding: 2rem;">
                      <i class="fas fa-school" style="font-size: 2rem; opacity: 0.3;"></i>
                      <p style="margin-top: 0.5rem; opacity: 0.6;">No schools registered yet</p>
                    </td>
                  </tr>
                <% } else { %>
                  <% schools.forEach((school, i) => { %>
                    <tr>
                      <td><%= i + 1 %></td>
                      <td>
                        <% if (school.logo) { %>
                          <img src="/uploads/<%= school.logo %>" alt="Logo" style="width: 40px; height: 40px; border-radius: 8px; object-fit: cover;">
                        <% } else { %>
                          <div style="width: 40px; height: 40px; border-radius: 8px; background: var(--bg-secondary); display: flex; align-items: center; justify-content: center;">
                            <i class="fas fa-school" style="color: var(--text-muted);"></i>
                          </div>
                        <% } %>
                      </td>
                      <td>
                        <strong><%= school.display_name || school.username %></strong>
                        <% if (school.display_name) { %>
                          <br><small style="color: var(--text-muted);">@<%= school.username %></small>
                        <% } %>
                      </td>
                      <td>
                        <% if (school.email || school.phone) { %>
                          <% if (school.email) { %><small><i class="fas fa-envelope"></i> <%= school.email %></small><br><% } %>
                          <% if (school.phone) { %><small><i class="fas fa-phone"></i> <%= school.phone %></small><% } %>
                        <% } else { %>
                          <span style="color: var(--text-muted);">--</span>
                        <% } %>
                      </td>
                      <td>
                        <div style="display: flex; gap: 0.5rem; flex-wrap: wrap;">
                          <a href="/admin/schools/edit/<%= school.id %>" class="btn btn-primary btn-sm">
                            <i class="fas fa-edit"></i> Edit
                          </a>
                          <a href="/admin/schools/dashboard/<%= school.id %>" class="btn btn-outline btn-sm">
                            <i class="fas fa-arrow-right"></i> View
                          </a>
                          <form action="/admin/schools/delete/<%= school.id %>" method="POST" onsubmit="return confirm('Delete this school and all its data?')" style="display: inline;">
                            <button class="btn btn-danger btn-sm" type="submit">
                              <i class="fas fa-trash"></i>
                            </button>
                          </form>
                        </div>
                      </td>
                    </tr>
                  <% }) %>
                <% } %>
              </tbody>
            </table>
          </div>
        </div>
      </main>

      <footer class="footer">
        <p>&copy; 2026 Primary School Performance System</p>
      </footer>
    </div>
  </div>

  <script src="/js/main.js"></script>
  <script>
    // Initialize theme from localStorage
    const savedTheme = localStorage.getItem('theme') || 'light';
    document.documentElement.setAttribute('data-theme', savedTheme);
    const themeIcon = document.querySelector('#themeToggle i');
    if (themeIcon) {
      themeIcon.className = savedTheme === 'dark' ? 'fas fa-sun' : 'fas fa-moon';
    }
  </script>
</body>
</html>
