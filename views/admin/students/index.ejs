<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Students | PSP Admin</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <script>
    (function() {
      const theme = localStorage.getItem('psp-theme') || 'dark';
      document.documentElement.setAttribute('data-theme', theme);
    })();
  </script>
  <link rel="stylesheet" href="/css/style.css">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">
</head>
<body>
  <div class="app-container">
    <!-- Sidebar -->
    <aside class="sidebar">
      <div class="sidebar-header">
        <div class="logo">
          <i class="fas fa-graduation-cap"></i>
          <span>PSP Admin</span>
        </div>
        <button class="theme-toggle" id="themeToggle" title="Toggle theme">
          <i class="fas fa-moon"></i>
        </button>
      </div>
      <nav class="sidebar-nav">
        <a href="/admin/dashboard" class="nav-item"><i class="fas fa-gauge"></i><span>Dashboard</span></a>
        <a href="/admin/schools" class="nav-item"><i class="fas fa-school"></i><span>Schools</span></a>
        <a href="/admin/teachers" class="nav-item"><i class="fas fa-chalkboard-teacher"></i><span>Teachers</span></a>
        <a href="/admin/students" class="nav-item active"><i class="fas fa-user-graduate"></i><span>Students</span></a>
        <a href="/admin/resources" class="nav-item"><i class="fas fa-boxes-stacked"></i><span>Resources</span></a>
        <a href="/admin/attendance" class="nav-item"><i class="fas fa-calendar-check"></i><span>Attendance</span></a>
        <a href="/admin/analytics" class="nav-item"><i class="fas fa-chart-pie"></i><span>Analytics</span></a>
        <a href="/admin/reports" class="nav-item"><i class="fas fa-file-alt"></i><span>Reports</span></a>
        <a href="/itadmin" class="nav-item"><i class="fas fa-user-shield"></i><span>IT Admins</span></a>
      </nav>
    </aside>

    <!-- Main Content -->
    <div class="main-content">
      <header class="topbar">
        <button class="menu-toggle" id="menuToggle">
          <i class="fas fa-bars"></i>
        </button>
        <h1 class="page-title">Students</h1>
        <div class="topbar-actions">
          <a href="/admin/dashboard" class="btn btn-ghost"><i class="fas fa-home"></i></a>
          <a href="/logout" class="btn btn-ghost"><i class="fas fa-sign-out-alt"></i></a>
        </div>
      </header>

      <main class="content">
        <!-- Stats Card -->
        <div class="stats-grid" style="margin-bottom: 1.5rem;">
          <div class="stat-card">
            <div class="stat-icon"><i class="fas fa-user-graduate"></i></div>
            <div class="stat-info">
              <span class="stat-value"><%= totalStudents %></span>
              <span class="stat-label">Total Students</span>
            </div>
          </div>
        </div>

        <% if (success_msg && String(success_msg).trim() !== "") { %>
          <div class="alert alert-success"><i class="fas fa-check-circle"></i> <%= success_msg %></div>
        <% } %>
        <% if (error_msg && String(error_msg).trim() !== "") { %>
          <div class="alert alert-danger"><i class="fas fa-exclamation-circle"></i> <%= error_msg %></div>
        <% } %>

        <% const queryString = `q=${encodeURIComponent(filters.search || '')}&schoolId=${encodeURIComponent(filters.schoolId || 'all')}&grade=${encodeURIComponent(filters.grade || 'all')}`; %>

        <!-- Filters -->
        <div class="card" style="margin-bottom: 1.5rem;">
          <form class="filter-form" method="GET" action="/admin/students" style="display: flex; flex-wrap: wrap; gap: 1rem; align-items: center;">
            <div class="form-group" style="flex: 1; min-width: 200px; margin-bottom: 0;">
              <input type="text" name="q" class="form-control" placeholder="Search name, class, ID..." value="<%= filters.search || '' %>">
            </div>
            <div class="form-group" style="min-width: 150px; margin-bottom: 0;">
              <select name="schoolId" class="form-control">
                <option value="all" <%= filters.schoolId === 'all' ? 'selected' : '' %>>All Schools</option>
                <% schools.forEach(school => { %>
                  <option value="<%= school.id %>" <%= String(filters.schoolId) === String(school.id) ? 'selected' : '' %>>
                    <%= school.username %>
                  </option>
                <% }) %>
              </select>
            </div>
            <div class="form-group" style="min-width: 150px; margin-bottom: 0;">
              <select name="grade" class="form-control">
                <option value="all" <%= filters.grade === 'all' ? 'selected' : '' %>>All Grades</option>
                <% grades.forEach(g => { %>
                  <option value="<%= g %>" <%= String(filters.grade) === String(g) ? 'selected' : '' %>><%= g %></option>
                <% }) %>
              </select>
            </div>
            <button class="btn btn-primary" type="submit"><i class="fas fa-filter"></i> Apply</button>
            <a class="btn btn-outline" href="/admin/students/export/csv?<%= queryString %>"><i class="fas fa-file-csv"></i> CSV</a>
            <a class="btn btn-outline" href="/admin/students/export/pdf?<%= queryString %>"><i class="fas fa-file-pdf"></i> PDF</a>
          </form>
        </div>

        <!-- Students Table -->
        <div class="card">
          <div class="table-wrapper">
            <table>
              <thead>
                <tr>
                  <th>#</th>
                  <th>Full Name</th>
                  <th>Grade</th>
                  <th>Class</th>
                  <th>Gender</th>
                  <th>Student ID</th>
                  <th>School</th>
                </tr>
              </thead>
              <tbody>
                <% if (!students || students.length === 0) { %>
                  <tr>
                    <td colspan="7" style="text-align: center; padding: 2rem;">
                      <i class="fas fa-user-graduate" style="font-size: 2rem; opacity: 0.3;"></i>
                      <p style="margin-top: 0.5rem; opacity: 0.6;">No students found</p>
                    </td>
                  </tr>
                <% } else { %>
                  <% students.forEach((student, idx) => { %>
                    <tr>
                      <td><%= idx + 1 %></td>
                      <td><strong><%= student.name %></strong></td>
                      <td><%= student.grade %></td>
                      <td><%= student.student_class %></td>
                      <td>
                        <span class="badge badge-<%= student.gender === 'Male' ? 'primary' : 'success' %>">
                          <%= student.gender %>
                        </span>
                      </td>
                      <td><code><%= student.student_id %></code></td>
                      <td>
                        <span class="badge badge-info">
                          <%= student.school_name || (`School #${student.school_id}`) %>
                        </span>
                      </td>
                    </tr>
                  <% }) %>
                <% } %>
              </tbody>
            </table>
          </div>
        </div>
      </main>

      <footer class="footer">
        <p>&copy; 2025 Primary School Performance System</p>
      </footer>
    </div>
  </div>

  <script src="/js/main.js"></script>
  <script>
    // Initialize theme from localStorage
    const savedTheme = localStorage.getItem('theme') || 'light';
    document.documentElement.setAttribute('data-theme', savedTheme);
    const themeIcon = document.querySelector('#themeToggle i');
    if (themeIcon) {
      themeIcon.className = savedTheme === 'dark' ? 'fas fa-sun' : 'fas fa-moon';
    }
  </script>
</body>
</html>
