<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Teachers | PSP Admin</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/css/style.css">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">
  <link rel="icon" type="image/png" href="/assets/logo.png">
</head>
<body>
  <div class="app-shell">
    <div class="sidebar-overlay"></div>

    <aside class="sidebar">
      <div class="sidebar-header">
        <div class="sidebar-brand">
          <img src="/assets/logo.png" alt="Logo" class="sidebar-logo">
          <div>
            <div class="sidebar-brand-text">PSP Admin</div>
            <div class="sidebar-brand-label">Control Panel</div>
          </div>
        </div>
      </div>
      <nav class="sidebar-nav">
        <div class="nav-section">
          <div class="nav-section-title">Main</div>
          <a class="nav-link" href="/admin/dashboard"><i class="fas fa-gauge-high"></i> Dashboard</a>
        </div>
        <div class="nav-section">
          <div class="nav-section-title">Management</div>
          <a class="nav-link" href="/admin/schools"><i class="fas fa-school"></i> Schools</a>
          <a class="nav-link active" href="/admin/teachers"><i class="fas fa-chalkboard-user"></i> Teachers</a>
          <a class="nav-link" href="/admin/students"><i class="fas fa-user-graduate"></i> Students</a>
          <a class="nav-link" href="/admin/resources"><i class="fas fa-boxes-stacked"></i> Resources</a>
        </div>
        <div class="nav-section">
          <div class="nav-section-title">Tracking</div>
          <a class="nav-link" href="/admin/attendance"><i class="fas fa-calendar-check"></i> Attendance</a>
          <a class="nav-link" href="/admin/analytics"><i class="fas fa-chart-pie"></i> Analytics</a>
          <a class="nav-link" href="/admin/reports"><i class="fas fa-file-alt"></i> Reports</a>
        </div>
        <div class="nav-section">
          <div class="nav-section-title">System</div>
          <a class="nav-link" href="/itadmin"><i class="fas fa-user-cog"></i> IT Admins</a>
          <a class="nav-link logout" href="/logout"><i class="fas fa-right-from-bracket"></i> Logout</a>
        </div>
      </nav>
    </aside>

    <main class="main-content">
      <header class="topbar">
        <div class="topbar-left">
          <button class="mobile-menu-btn" aria-label="Toggle menu">
            <i class="fas fa-bars"></i>
          </button>
          <span class="page-title">Teachers</span>
        </div>
        <div class="topbar-right">
          <button class="theme-toggle" aria-label="Toggle theme">
            <i class="fas fa-moon"></i>
            <i class="fas fa-sun"></i>
          </button>
          <a href="/logout" class="topbar-btn danger">
            <i class="fas fa-sign-out-alt"></i>
            <span>Logout</span>
          </a>
        </div>
      </header>

      <section class="content">
        <div class="page-header">
          <div>
            <h1><i class="fas fa-chalkboard-user"></i> All Teachers</h1>
            <p class="subtitle">Read-only view of every teacher across schools.</p>
          </div>
          <div class="stat-card" style="min-width: 180px;">
            <div class="stat-icon"><i class="fas fa-users"></i></div>
            <div class="stat-content">
              <div class="stat-label">Total Teachers</div>
              <div class="stat-value"><%= totalTeachers %></div>
            </div>
          </div>
        </div>

        <% if (success_msg && String(success_msg).trim() !== "") { %>
          <div class="alert success"><i class="fas fa-check-circle"></i> <%= success_msg %></div>
        <% } %>
        <% if (error_msg && String(error_msg).trim() !== "") { %>
          <div class="alert error"><i class="fas fa-exclamation-circle"></i> <%= error_msg %></div>
        <% } %>

        <% const queryString = `q=${encodeURIComponent(filters.search || '')}&schoolId=${encodeURIComponent(filters.schoolId || 'all')}`; %>

        <div class="card">
          <div class="card-header">
            <h3 class="card-title"><i class="fas fa-filter"></i> Filter & Export</h3>
          </div>
          <form class="form-row" method="GET" action="/admin/teachers" style="flex-wrap: wrap;">
            <div class="form-group" style="flex: 1; min-width: 200px;">
              <input type="text" name="q" class="form-input" placeholder="Search name, subject, email, ID..." value="<%= filters.search || '' %>">
            </div>
            <div class="form-group" style="min-width: 180px;">
              <select name="schoolId" class="form-input">
                <option value="all" <%= filters.schoolId === 'all' ? 'selected' : '' %>>All Schools</option>
                <% schools.forEach(school => { %>
                  <option value="<%= school.id %>" <%= String(filters.schoolId) === String(school.id) ? 'selected' : '' %>>
                    <%= school.username %>
                  </option>
                <% }) %>
              </select>
            </div>
            <button class="btn primary" type="submit"><i class="fas fa-filter"></i> Apply</button>
            <a class="btn outline" href="/admin/teachers/export/csv?<%= queryString %>">
              <i class="fas fa-file-csv"></i> CSV
            </a>
            <a class="btn outline" href="/admin/teachers/export/pdf?<%= queryString %>">
              <i class="fas fa-file-pdf"></i> PDF
            </a>
          </form>
        </div>

        <div class="card">
          <div class="card-header">
            <h3 class="card-title"><i class="fas fa-list"></i> Teacher List</h3>
            <span class="badge"><%= teachers ? teachers.length : 0 %> teachers</span>
          </div>
          <div class="table-wrapper">
            <table>
              <thead>
                <tr>
                  <th>#</th>
                  <th>Full Name</th>
                  <th>Subject</th>
                  <th>Email</th>
                  <th>Phone</th>
                  <th>EC#</th>
                  <th>School</th>
                </tr>
              </thead>
              <tbody>
                <% if (!teachers || teachers.length === 0) { %>
                  <tr><td colspan="7" class="empty-state">No teachers found.</td></tr>
                <% } else { %>
                  <% teachers.forEach((teacher, idx) => { %>
                    <tr>
                      <td><%= idx + 1 %></td>
                      <td><strong><%= teacher.name %></strong></td>
                      <td><span class="badge success"><%= teacher.subject %></span></td>
                      <td><%= teacher.email %></td>
                      <td><%= teacher.phone %></td>
                      <td><span class="ec-number"><%= teacher.teacher_id %></span></td>
                      <td><span class="badge"><%= teacher.school_name || (`School #${teacher.school_id}`) %></span></td>
                    </tr>
                  <% }) %>
                <% } %>
              </tbody>
            </table>
          </div>
        </div>
      </section>

      <footer class="footer">
        Â© 2026 Primary School Performance System
      </footer>
    </main>
  </div>

  <script src="/js/main.js"></script>
</body>
</html>
