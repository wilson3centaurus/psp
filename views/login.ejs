<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Login | Primary School Performance</title>
  <script>
    // Set theme immediately to prevent flash
    (function() {
      const theme = localStorage.getItem('psp-theme') || 'dark';
      document.documentElement.setAttribute('data-theme', theme);
    })();
  </script>
  <link rel="stylesheet" href="/css/style.css">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">
  <link rel="icon" type="image/png" href="/assets/logo.png">
</head>
<body class="login-page">
  <!-- Theme Toggle -->
  <button class="theme-toggle-login" aria-label="Toggle theme">
    <i class="fas fa-moon"></i>
    <i class="fas fa-sun"></i>
  </button>

  <div class="login-container">
    <div class="login-card">
      <div class="login-header">
        <img src="/assets/logo.png" alt="PSP Logo" class="login-logo">
        <h1 class="login-title">Welcome Back</h1>
        <p class="login-subtitle">Sign in to Primary School Performance</p>
      </div>

     

      <% if (typeof error_msg !== 'undefined' && error_msg && String(error_msg).trim() !== "") { %>
        <div class="alert error" style="margin-bottom: 1rem; padding: 0.875rem 1rem; border-radius: var(--radius); background: var(--error-light); color: var(--error); border: 1px solid var(--error); font-weight: 500; text-align: center; animation: shake 0.4s ease-out; display: flex; align-items: center; gap: 0.5rem; justify-content: center;">
          <i class="fas fa-exclamation-circle"></i> <%= error_msg %>
        </div>
      <% } %>
      <% if (typeof success_msg !== 'undefined' && success_msg && String(success_msg).trim() !== "") { %>
        <div class="alert success" style="margin-bottom: 1rem; padding: 0.875rem 1rem; border-radius: var(--radius); background: var(--success-light); color: var(--success); border: 1px solid var(--success); font-weight: 500; text-align: center; display: flex; align-items: center; gap: 0.5rem; justify-content: center;">
          <i class="fas fa-check-circle"></i> <%= success_msg %>
        </div>
      <% } %>

      <form action="/login" method="POST" class="login-form">
        <div class="form-group">
          <label for="username">Username</label>
          <div class="input-wrapper">
            <input 
              type="text" 
              id="username"
              name="username" 
              placeholder="Enter your username"
              value="<%= typeof username !== 'undefined' ? username : '' %>"
              required 
              autocomplete="username"
            >
            <i class="fas fa-user input-icon"></i>
          </div>
        </div>

        <div class="form-group">
          <label for="password">Password</label>
          <div class="input-wrapper">
            <input 
              type="password" 
              id="password"
              name="password" 
              placeholder="Enter your password"
              required 
              autocomplete="current-password"
            >
            <i class="fas fa-lock input-icon"></i>
            <button type="button" class="password-toggle" aria-label="Toggle password visibility">
              <i class="fas fa-eye"></i>
            </button>
          </div>
        </div>

        <button type="submit" class="login-btn">
          <i class="fas fa-sign-in-alt"></i>
          Sign In
        </button>
      </form>
    </div>
  </div>

  <script src="/js/main.js"></script>
</body>
</html>

