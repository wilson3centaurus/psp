<!DOCTYPE html> 
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Add Student | PSP</title>
  <link rel="stylesheet" href="/css/style.css">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">
  <link rel="icon" type="image/png" href="/assets/logo.png">
</head>
<body class="form-page">
  <div class="form-page-container">
    <div class="form-page-header">
      <a href="/student" class="back-btn"><i class="fas fa-arrow-left"></i></a>
      <h1><i class="fas fa-user-plus"></i> Add New Student</h1>
      <button class="theme-toggle" aria-label="Toggle theme">
        <i class="fas fa-moon"></i>
        <i class="fas fa-sun"></i>
      </button>
    </div>

    <% if (success_msg && String(success_msg).trim() !== "") { %>
      <div class="alert success"><i class="fas fa-check-circle"></i> <%= success_msg %></div>
    <% } %>
    <% if (error_msg && String(error_msg).trim() !== "") { %>
      <div class="alert error"><i class="fas fa-exclamation-circle"></i> <%= error_msg %></div>
    <% } %>

    <div class="card form-card">
      <form action="/student/add" method="POST">
        <div class="form-group">
          <label for="name"><i class="fas fa-user"></i> Full Name</label>
          <input type="text" id="name" name="name" class="form-input" placeholder="Enter student's full name" required>
        </div>

        <div class="form-row">
          <div class="form-group">
            <label for="grade"><i class="fas fa-layer-group"></i> Grade</label>
            <select id="grade" name="grade" class="form-input" required>
              <option value="">Select Grade</option>
              <option value="1">Grade 1</option>
              <option value="2">Grade 2</option>
              <option value="3">Grade 3</option>
              <option value="4">Grade 4</option>
              <option value="5">Grade 5</option>
              <option value="6">Grade 6</option>
              <option value="7">Grade 7</option>
            </select>
          </div>
          <div class="form-group">
            <label for="student_class"><i class="fas fa-door-open"></i> Class</label>
            <select id="student_class" name="student_class" class="form-input" required>
              <option value="">Select Class</option>
              <option value="A">Class A</option>
              <option value="B">Class B</option>
              <option value="C">Class C</option>
              <option value="D">Class D</option>
              <option value="E">Class E</option>
              <option value="F">Class F</option>
            </select>
          </div>
        </div>

        <div class="form-row">
          <div class="form-group">
            <label for="gender"><i class="fas fa-venus-mars"></i> Gender</label>
            <select id="gender" name="gender" class="form-input" required>
              <option value="">Select Gender</option>
              <option value="Male">Male</option>
              <option value="Female">Female</option>
              <option value="Other">Other</option>
            </select>
          </div>
          <div class="form-group">
            <label for="student_id"><i class="fas fa-id-card"></i> Student ID</label>
            <input type="text" id="student_id" name="student_id" class="form-input" placeholder="e.g. STU001" required>
          </div>
        </div>

        <div class="form-actions">
          <a href="/student" class="btn outline"><i class="fas fa-times"></i> Cancel</a>
          <button type="submit" class="btn primary"><i class="fas fa-save"></i> Save Student</button>
        </div>
      </form>
    </div>
  </div>

  <script src="/js/main.js"></script>
</body>
</html>
