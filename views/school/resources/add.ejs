<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Add Resource | PSP</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/css/style.css">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">
  <link rel="icon" type="image/png" href="/assets/logo.png">
</head>
<body class="form-page">
  <div class="form-page-container">
    <div class="form-page-header">
      <a href="/resources" class="back-btn"><i class="fas fa-arrow-left"></i></a>
      <h1><i class="fas fa-plus-circle"></i> Add Resource</h1>
      <button class="theme-toggle" aria-label="Toggle theme">
        <i class="fas fa-moon"></i>
        <i class="fas fa-sun"></i>
      </button>
    </div>

    <div class="card form-card">
      <form action="/resources/add" method="POST">
        <!-- Subject Information -->
        <div class="form-section">
          <h3 class="form-section-title"><i class="fas fa-book-open"></i> Subject Information</h3>
          <div class="form-row">
            <div class="form-group">
              <label for="subject_name"><i class="fas fa-book"></i> Subject</label>
              <select name="subject_name" id="subject_name" class="form-input" required onchange="updateSubjectId()">
                <option value="">Select Subject</option>
                <option value="Mathematics">Mathematics</option>
                <option value="English">English</option>
                <option value="Chishona">Chishona</option>
                <option value="Social Science">Social Science</option>
                <option value="Physical Education and Arts">Physical Education and Arts</option>
                <option value="Science and Technology">Science and Technology</option>
              </select>
            </div>
            <div class="form-group">
              <label for="subject_id"><i class="fas fa-id-badge"></i> Subject ID</label>
              <input type="text" name="subject_id" id="subject_id" class="form-input" placeholder="Auto-generated" required readonly>
            </div>
          </div>

          <div class="form-group">
            <label for="grade"><i class="fas fa-graduation-cap"></i> Grade</label>
            <select name="grade" id="grade" class="form-input" required onchange="updateSubjectId()">
              <option value="">Select Grade</option>
              <option value="Grade 1">Grade 1</option>
              <option value="Grade 2">Grade 2</option>
              <option value="Grade 3">Grade 3</option>
              <option value="Grade 4">Grade 4</option>
              <option value="Grade 5">Grade 5</option>
              <option value="Grade 6">Grade 6</option>
              <option value="Grade 7">Grade 7</option>
            </select>
          </div>
        </div>

        <!-- Student Count -->
        <div class="form-section">
          <h3 class="form-section-title"><i class="fas fa-users"></i> Class Information</h3>
          <div class="form-group">
            <label for="num_students"><i class="fas fa-user-graduate"></i> Number of Students</label>
            <input type="number" name="num_students" id="num_students" class="form-input" min="0" placeholder="0" required>
            <small class="form-hint"><i class="fas fa-info-circle"></i> Total students enrolled in this subject/grade</small>
          </div>
        </div>

        <!-- Learning Materials -->
        <div class="form-section">
          <h3 class="form-section-title"><i class="fas fa-book"></i> Learning Materials (Books)</h3>
          <p class="form-section-desc">Enter the total count of all learning materials (textbooks, workbooks, reading materials)</p>
          
          <div class="form-row">
            <div class="form-group">
              <label for="num_books"><i class="fas fa-book-open"></i> Total Books</label>
              <input type="number" name="num_books" id="num_books" class="form-input" min="0" placeholder="0" required>
            </div>
          </div>
          
          <div class="resource-details-box">
            <h4><i class="fas fa-list-ul"></i> Book Type Breakdown (Optional)</h4>
            <div class="form-row">
              <div class="form-group">
                <label for="textbooks"><i class="fas fa-book"></i> Textbooks</label>
                <input type="number" id="textbooks" class="form-input detail-input" min="0" placeholder="0" onchange="calculateTotalBooks()">
              </div>
              <div class="form-group">
                <label for="workbooks"><i class="fas fa-pencil-alt"></i> Workbooks</label>
                <input type="number" id="workbooks" class="form-input detail-input" min="0" placeholder="0" onchange="calculateTotalBooks()">
              </div>
              <div class="form-group">
                <label for="readers"><i class="fas fa-glasses"></i> Readers</label>
                <input type="number" id="readers" class="form-input detail-input" min="0" placeholder="0" onchange="calculateTotalBooks()">
              </div>
            </div>
            <div class="form-row">
              <div class="form-group">
                <label for="reference"><i class="fas fa-atlas"></i> Reference Books</label>
                <input type="number" id="reference" class="form-input detail-input" min="0" placeholder="0" onchange="calculateTotalBooks()">
              </div>
              <div class="form-group">
                <label for="charts"><i class="fas fa-chart-pie"></i> Charts/Posters</label>
                <input type="number" id="charts" class="form-input detail-input" min="0" placeholder="0" onchange="calculateTotalBooks()">
              </div>
              <div class="form-group">
                <label for="other_materials"><i class="fas fa-box"></i> Other Materials</label>
                <input type="number" id="other_materials" class="form-input detail-input" min="0" placeholder="0" onchange="calculateTotalBooks()">
              </div>
            </div>
          </div>
        </div>

        <!-- Technology Resources -->
        <div class="form-section">
          <h3 class="form-section-title"><i class="fas fa-laptop"></i> Technology Resources</h3>
          <p class="form-section-desc">Enter the total count of technology equipment available</p>
          
          <div class="form-row">
            <div class="form-group">
              <label for="num_computers"><i class="fas fa-desktop"></i> Total Computers/Devices</label>
              <input type="number" name="num_computers" id="num_computers" class="form-input" min="0" placeholder="0" required>
            </div>
          </div>
          
          <div class="resource-details-box">
            <h4><i class="fas fa-list-ul"></i> Device Type Breakdown (Optional)</h4>
            <div class="form-row">
              <div class="form-group">
                <label for="desktops"><i class="fas fa-desktop"></i> Desktop PCs</label>
                <input type="number" id="desktops" class="form-input detail-input" min="0" placeholder="0" onchange="calculateTotalComputers()">
              </div>
              <div class="form-group">
                <label for="laptops"><i class="fas fa-laptop"></i> Laptops</label>
                <input type="number" id="laptops" class="form-input detail-input" min="0" placeholder="0" onchange="calculateTotalComputers()">
              </div>
              <div class="form-group">
                <label for="tablets"><i class="fas fa-tablet-alt"></i> Tablets</label>
                <input type="number" id="tablets" class="form-input detail-input" min="0" placeholder="0" onchange="calculateTotalComputers()">
              </div>
            </div>
            <div class="form-row">
              <div class="form-group">
                <label for="projectors"><i class="fas fa-video"></i> Projectors</label>
                <input type="number" id="projectors" class="form-input detail-input" min="0" placeholder="0" onchange="calculateTotalComputers()">
              </div>
              <div class="form-group">
                <label for="printers"><i class="fas fa-print"></i> Printers</label>
                <input type="number" id="printers" class="form-input detail-input" min="0" placeholder="0" onchange="calculateTotalComputers()">
              </div>
              <div class="form-group">
                <label for="other_tech"><i class="fas fa-cogs"></i> Other Tech</label>
                <input type="number" id="other_tech" class="form-input detail-input" min="0" placeholder="0" onchange="calculateTotalComputers()">
              </div>
            </div>
          </div>
        </div>

        <!-- Resource Ratio Indicator -->
        <div class="form-section">
          <h3 class="form-section-title"><i class="fas fa-chart-bar"></i> Resource Ratios</h3>
          <div class="ratio-indicators">
            <div class="ratio-card" id="book-ratio-card">
              <div class="ratio-icon"><i class="fas fa-book"></i></div>
              <div class="ratio-info">
                <span class="ratio-label">Books per Student</span>
                <span class="ratio-value" id="book-ratio">0:0</span>
              </div>
            </div>
            <div class="ratio-card" id="computer-ratio-card">
              <div class="ratio-icon"><i class="fas fa-laptop"></i></div>
              <div class="ratio-info">
                <span class="ratio-label">Students per Computer</span>
                <span class="ratio-value" id="computer-ratio">0:0</span>
              </div>
            </div>
          </div>
        </div>

        <div class="form-actions">
          <a href="/resources" class="btn outline"><i class="fas fa-times"></i> Cancel</a>
          <button type="submit" class="btn primary"><i class="fas fa-save"></i> Save Resource</button>
        </div>
      </form>
    </div>
  </div>

  <script src="/js/main.js"></script>
  <script>
    // Generate Subject ID based on subject name and grade
    function updateSubjectId() {
      const subject = document.getElementById('subject_name').value;
      const grade = document.getElementById('grade').value;
      if (subject && grade) {
        const subjectCode = subject.substring(0, 3).toUpperCase();
        const gradeNum = grade.replace('Grade ', '');
        document.getElementById('subject_id').value = subjectCode + gradeNum;
      }
    }

    // Calculate total books from breakdown
    function calculateTotalBooks() {
      const textbooks = parseInt(document.getElementById('textbooks').value) || 0;
      const workbooks = parseInt(document.getElementById('workbooks').value) || 0;
      const readers = parseInt(document.getElementById('readers').value) || 0;
      const reference = parseInt(document.getElementById('reference').value) || 0;
      const charts = parseInt(document.getElementById('charts').value) || 0;
      const other = parseInt(document.getElementById('other_materials').value) || 0;
      
      const total = textbooks + workbooks + readers + reference + charts + other;
      if (total > 0) {
        document.getElementById('num_books').value = total;
      }
      updateRatios();
    }

    // Calculate total computers from breakdown
    function calculateTotalComputers() {
      const desktops = parseInt(document.getElementById('desktops').value) || 0;
      const laptops = parseInt(document.getElementById('laptops').value) || 0;
      const tablets = parseInt(document.getElementById('tablets').value) || 0;
      const projectors = parseInt(document.getElementById('projectors').value) || 0;
      const printers = parseInt(document.getElementById('printers').value) || 0;
      const other = parseInt(document.getElementById('other_tech').value) || 0;
      
      const total = desktops + laptops + tablets + projectors + printers + other;
      if (total > 0) {
        document.getElementById('num_computers').value = total;
      }
      updateRatios();
    }

    // Update ratio indicators
    function updateRatios() {
      const students = parseInt(document.getElementById('num_students').value) || 0;
      const books = parseInt(document.getElementById('num_books').value) || 0;
      const computers = parseInt(document.getElementById('num_computers').value) || 0;

      // Book ratio
      const bookRatioEl = document.getElementById('book-ratio');
      const bookRatioCard = document.getElementById('book-ratio-card');
      if (students > 0 && books > 0) {
        const ratio = (books / students).toFixed(1);
        bookRatioEl.textContent = ratio + ':1';
        bookRatioCard.className = 'ratio-card ' + (ratio >= 1 ? 'good' : ratio >= 0.5 ? 'warning' : 'bad');
      } else {
        bookRatioEl.textContent = '0:0';
        bookRatioCard.className = 'ratio-card';
      }

      // Computer ratio
      const compRatioEl = document.getElementById('computer-ratio');
      const compRatioCard = document.getElementById('computer-ratio-card');
      if (students > 0 && computers > 0) {
        const ratio = Math.ceil(students / computers);
        compRatioEl.textContent = ratio + ':1';
        compRatioCard.className = 'ratio-card ' + (ratio <= 5 ? 'good' : ratio <= 10 ? 'warning' : 'bad');
      } else {
        compRatioEl.textContent = '0:0';
        compRatioCard.className = 'ratio-card';
      }
    }

    // Add event listeners for ratio updates
    document.getElementById('num_students').addEventListener('input', updateRatios);
    document.getElementById('num_books').addEventListener('input', updateRatios);
    document.getElementById('num_computers').addEventListener('input', updateRatios);
  </script>
</body>
</html>
