<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Edit Resource | PSP</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/css/style.css">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">
  <link rel="icon" type="image/png" href="/assets/logo.png">
</head>
<body class="form-page">
  <div class="form-page-container">
    <div class="form-page-header">
      <a href="/resources" class="back-btn"><i class="fas fa-arrow-left"></i></a>
      <h1><i class="fas fa-edit"></i> Edit Resource</h1>
      <button class="theme-toggle" aria-label="Toggle theme">
        <i class="fas fa-moon"></i>
        <i class="fas fa-sun"></i>
      </button>
    </div>

    <div class="card form-card">
      <% if (typeof success_msg !== 'undefined' && success_msg && String(success_msg).trim() !== "") { %>
        <div class="alert success"><i class="fas fa-check-circle"></i> <%= success_msg %></div>
      <% } %>
      <% if (typeof error_msg !== 'undefined' && error_msg && String(error_msg).trim() !== "") { %>
        <div class="alert error"><i class="fas fa-exclamation-circle"></i> <%= error_msg %></div>
      <% } %>

      <form action="/resources/edit/<%= resource.id %>" method="POST">
        <!-- Subject Information -->
        <div class="form-section">
          <h3 class="form-section-title"><i class="fas fa-book-open"></i> Subject Information</h3>
          <div class="form-row">
            <div class="form-group">
              <label for="subject_name"><i class="fas fa-book"></i> Subject</label>
              <select name="subject_name" id="subject_name" class="form-input" required>
                <option value="">Select Subject</option>
                <option value="Mathematics" <%= resource.subject_name === 'Mathematics' ? 'selected' : '' %>>Mathematics</option>
                <option value="English" <%= resource.subject_name === 'English' ? 'selected' : '' %>>English</option>
                <option value="Chishona" <%= resource.subject_name === 'Chishona' ? 'selected' : '' %>>Chishona</option>
                <option value="Social Science" <%= resource.subject_name === 'Social Science' ? 'selected' : '' %>>Social Science</option>
                <option value="Physical Education and Arts" <%= resource.subject_name === 'Physical Education and Arts' ? 'selected' : '' %>>Physical Education and Arts</option>
                <option value="Science and Technology" <%= resource.subject_name === 'Science and Technology' ? 'selected' : '' %>>Science and Technology</option>
              </select>
            </div>
            <div class="form-group">
              <label for="subject_id"><i class="fas fa-id-badge"></i> Subject ID</label>
              <input type="text" name="subject_id" id="subject_id" class="form-input" value="<%= resource.subject_id %>" required>
            </div>
          </div>

          <div class="form-group">
            <label for="grade"><i class="fas fa-graduation-cap"></i> Grade</label>
            <select name="grade" id="grade" class="form-input" required>
              <option value="">Select Grade</option>
              <option value="Grade 1" <%= resource.grade === 'Grade 1' ? 'selected' : '' %>>Grade 1</option>
              <option value="Grade 2" <%= resource.grade === 'Grade 2' ? 'selected' : '' %>>Grade 2</option>
              <option value="Grade 3" <%= resource.grade === 'Grade 3' ? 'selected' : '' %>>Grade 3</option>
              <option value="Grade 4" <%= resource.grade === 'Grade 4' ? 'selected' : '' %>>Grade 4</option>
              <option value="Grade 5" <%= resource.grade === 'Grade 5' ? 'selected' : '' %>>Grade 5</option>
              <option value="Grade 6" <%= resource.grade === 'Grade 6' ? 'selected' : '' %>>Grade 6</option>
              <option value="Grade 7" <%= resource.grade === 'Grade 7' ? 'selected' : '' %>>Grade 7</option>
            </select>
          </div>
        </div>

        <!-- Student Count -->
        <div class="form-section">
          <h3 class="form-section-title"><i class="fas fa-users"></i> Class Information</h3>
          <div class="form-group">
            <label for="num_students"><i class="fas fa-user-graduate"></i> Number of Students</label>
            <input type="number" name="num_students" id="num_students" class="form-input" min="0" value="<%= resource.num_students %>" required>
            <small class="form-hint"><i class="fas fa-info-circle"></i> Total students enrolled in this subject/grade</small>
          </div>
        </div>

        <!-- Learning Materials -->
        <div class="form-section">
          <h3 class="form-section-title"><i class="fas fa-book"></i> Learning Materials</h3>
          <div class="form-group">
            <label for="num_books"><i class="fas fa-book-open"></i> Total Books</label>
            <input type="number" name="num_books" id="num_books" class="form-input" min="0" value="<%= resource.num_books %>" required>
          </div>
        </div>

        <!-- Technology Resources -->
        <div class="form-section">
          <h3 class="form-section-title"><i class="fas fa-laptop"></i> Technology Resources</h3>
          <div class="form-group">
            <label for="num_computers"><i class="fas fa-desktop"></i> Total Computers/Devices</label>
            <input type="number" name="num_computers" id="num_computers" class="form-input" min="0" value="<%= resource.num_computers %>" required>
          </div>
        </div>

        <!-- Resource Ratio Indicator -->
        <div class="form-section">
          <h3 class="form-section-title"><i class="fas fa-chart-bar"></i> Resource Ratios</h3>
          <div class="ratio-indicators">
            <div class="ratio-card" id="book-ratio-card">
              <div class="ratio-icon"><i class="fas fa-book"></i></div>
              <div class="ratio-info">
                <span class="ratio-label">Books per Student</span>
                <span class="ratio-value" id="book-ratio">0:0</span>
              </div>
            </div>
            <div class="ratio-card" id="computer-ratio-card">
              <div class="ratio-icon"><i class="fas fa-laptop"></i></div>
              <div class="ratio-info">
                <span class="ratio-label">Students per Computer</span>
                <span class="ratio-value" id="computer-ratio">0:0</span>
              </div>
            </div>
          </div>
        </div>

        <div class="form-actions">
          <a href="/resources" class="btn outline"><i class="fas fa-times"></i> Cancel</a>
          <button type="submit" class="btn primary"><i class="fas fa-save"></i> Update Resource</button>
        </div>
      </form>
    </div>
  </div>

  <script src="/js/main.js"></script>
  <script>
    // Update ratio indicators
    function updateRatios() {
      const students = parseInt(document.getElementById('num_students').value) || 0;
      const books = parseInt(document.getElementById('num_books').value) || 0;
      const computers = parseInt(document.getElementById('num_computers').value) || 0;

      // Book ratio
      const bookRatioEl = document.getElementById('book-ratio');
      const bookRatioCard = document.getElementById('book-ratio-card');
      if (students > 0 && books > 0) {
        const ratio = (books / students).toFixed(1);
        bookRatioEl.textContent = ratio + ':1';
        bookRatioCard.className = 'ratio-card ' + (ratio >= 1 ? 'good' : ratio >= 0.5 ? 'warning' : 'bad');
      } else {
        bookRatioEl.textContent = '0:0';
        bookRatioCard.className = 'ratio-card';
      }

      // Computer ratio
      const compRatioEl = document.getElementById('computer-ratio');
      const compRatioCard = document.getElementById('computer-ratio-card');
      if (students > 0 && computers > 0) {
        const ratio = Math.ceil(students / computers);
        compRatioEl.textContent = ratio + ':1';
        compRatioCard.className = 'ratio-card ' + (ratio <= 5 ? 'good' : ratio <= 10 ? 'warning' : 'bad');
      } else {
        compRatioEl.textContent = '0:0';
        compRatioCard.className = 'ratio-card';
      }
    }

    // Add event listeners for ratio updates
    document.getElementById('num_students').addEventListener('input', updateRatios);
    document.getElementById('num_books').addEventListener('input', updateRatios);
    document.getElementById('num_computers').addEventListener('input', updateRatios);
    
    // Initial calculation
    updateRatios();
  </script>
</body>
</html>
