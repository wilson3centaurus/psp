<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Student Attendance | PSP</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/css/style.css">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">
  <link rel="icon" type="image/png" href="/assets/logo.png">
</head>
<body>
  <div class="app-shell">
    <div class="sidebar-overlay"></div>

    <aside class="sidebar">
      <div class="sidebar-header">
        <div class="sidebar-brand">
          <img src="/assets/logo.png" alt="Logo" class="sidebar-logo">
          <div>
            <div class="sidebar-brand-text"><%= user.username %></div>
            <div class="sidebar-brand-label">School Portal</div>
          </div>
        </div>
      </div>
      <nav class="sidebar-nav">
        <div class="nav-section">
          <div class="nav-section-title">Main</div>
          <a class="nav-link" href="/school/dashboard"><i class="fas fa-gauge-high"></i> Dashboard</a>
        </div>
        <div class="nav-section">
          <div class="nav-section-title">Management</div>
          <a class="nav-link" href="/student"><i class="fas fa-user-graduate"></i> Students</a>
          <a class="nav-link" href="/teacher"><i class="fas fa-chalkboard-user"></i> Teachers</a>
          <a class="nav-link" href="/resources"><i class="fas fa-boxes-stacked"></i> Resources</a>
        </div>
        <div class="nav-section">
          <div class="nav-section-title">Attendance</div>
          <a class="nav-link active" href="/student-attendance"><i class="fas fa-clipboard-user"></i> Student Attendance</a>
          <a class="nav-link" href="/teacher-attendance"><i class="fas fa-user-clock"></i> Teacher Attendance</a>
        </div>
        <div class="nav-section">
          <div class="nav-section-title">Account</div>
          <a class="nav-link logout" href="/logout"><i class="fas fa-right-from-bracket"></i> Logout</a>
        </div>
      </nav>
    </aside>

    <main class="main-content">
      <header class="topbar">
        <div class="topbar-left">
          <button class="mobile-menu-btn" aria-label="Toggle menu">
            <i class="fas fa-bars"></i>
          </button>
          <span class="page-title">Student Attendance</span>
        </div>
        <div class="topbar-right">
          <button class="theme-toggle" aria-label="Toggle theme">
            <i class="fas fa-moon"></i>
            <i class="fas fa-sun"></i>
          </button>
          <a href="/student-attendance/mark" class="topbar-btn">
            <i class="fas fa-pen"></i>
            <span>Mark</span>
          </a>
          <a href="/logout" class="topbar-btn danger">
            <i class="fas fa-sign-out-alt"></i>
            <span>Logout</span>
          </a>
        </div>
      </header>

      <section class="content">
        <div class="page-header">
          <h1><i class="fas fa-calendar"></i> Attendance Sessions</h1>
          <p class="subtitle">Browse recorded student attendance by date.</p>
        </div>

        <% if (success_msg && String(success_msg).trim() !== "") { %>
          <div class="alert success"><i class="fas fa-check-circle"></i> <%= success_msg %></div>
        <% } %>
        <% if (error_msg && String(error_msg).trim() !== "") { %>
          <div class="alert error"><i class="fas fa-exclamation-circle"></i> <%= error_msg %></div>
        <% } %>

        <div class="card">
          <div class="card-header">
            <h3 class="card-title"><i class="fas fa-filter"></i> Filter Sessions</h3>
          </div>
          <form method="GET" action="/student-attendance" class="form-row" style="flex-wrap: wrap;">
            <div class="form-group" style="flex:1; min-width: 200px;">
              <label>Date</label>
              <input type="date" name="date" class="form-input" value="<%= searchDate || '' %>">
            </div>
            <button type="submit" class="btn primary"><i class="fas fa-filter"></i> Filter</button>
            <a href="/student-attendance" class="btn outline"><i class="fas fa-rotate-left"></i> Reset</a>
            <a href="/student-attendance/mark" class="btn secondary"><i class="fas fa-pen"></i> Mark Attendance</a>
          </form>
        </div>

        <div class="card">
          <div class="card-header">
            <h3 class="card-title"><i class="fas fa-list"></i> Sessions</h3>
            <span class="badge"><%= sessions ? sessions.length : 0 %> sessions</span>
          </div>
          <div class="table-wrapper">
            <table>
              <thead>
                <tr>
                  <th>#</th>
                  <th>Date</th>
                  <th>View</th>
                </tr>
              </thead>
              <tbody>
                <% if (!sessions || sessions.length === 0) { %>
                  <tr><td colspan="3" class="empty-state">No sessions found.</td></tr>
                <% } else { %>
                  <% sessions.forEach((session, idx) => { %>
                    <tr>
                      <td><%= idx + 1 %></td>
                      <td><strong><%= session.date %></strong></td>
                      <td><a class="btn outline" href="/student-attendance/view/<%= session.date %>"><i class="fas fa-eye"></i> View</a></td>
                    </tr>
                  <% }) %>
                <% } %>
              </tbody>
            </table>
          </div>
        </div>
      </section>

      <footer class="footer">
        Â© 2026 Primary School Performance System
      </footer>
    </main>
  </div>

  <script src="/js/main.js"></script>
</body>
</html>
