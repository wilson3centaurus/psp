<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Students | PSP</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/css/style.css">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">
  <link rel="icon" type="image/png" href="/assets/logo.png">
</head>
<body>
  <div class="app-shell">
    <div class="sidebar-overlay"></div>

    <aside class="sidebar">
      <div class="sidebar-header">
        <div class="sidebar-brand">
          <img src="/assets/logo.png" alt="Logo" class="sidebar-logo">
          <div>
            <div class="sidebar-brand-text"><%= user.username %></div>
            <div class="sidebar-brand-label">School Portal</div>
          </div>
        </div>
      </div>
      <nav class="sidebar-nav">
        <div class="nav-section">
          <div class="nav-section-title">Main</div>
          <a class="nav-link" href="/school/dashboard"><i class="fas fa-gauge-high"></i> Dashboard</a>
        </div>
        <div class="nav-section">
          <div class="nav-section-title">Management</div>
          <a class="nav-link active" href="/student"><i class="fas fa-user-graduate"></i> Students</a>
          <a class="nav-link" href="/teacher"><i class="fas fa-chalkboard-user"></i> Teachers</a>
          <a class="nav-link" href="/resources"><i class="fas fa-boxes-stacked"></i> Resources</a>
        </div>
        <div class="nav-section">
          <div class="nav-section-title">Attendance</div>
          <a class="nav-link" href="/student-attendance"><i class="fas fa-clipboard-user"></i> Student Attendance</a>
          <a class="nav-link" href="/teacher-attendance"><i class="fas fa-user-clock"></i> Teacher Attendance</a>
        </div>
        <div class="nav-section">
          <div class="nav-section-title">Account</div>
          <a class="nav-link logout" href="/logout"><i class="fas fa-right-from-bracket"></i> Logout</a>
        </div>
      </nav>
    </aside>

    <main class="main-content">
      <header class="topbar">
        <div class="topbar-left">
          <button class="mobile-menu-btn" aria-label="Toggle menu">
            <i class="fas fa-bars"></i>
          </button>
          <span class="page-title">Students</span>
        </div>
        <div class="topbar-right">
          <button class="theme-toggle" aria-label="Toggle theme">
            <i class="fas fa-moon"></i>
            <i class="fas fa-sun"></i>
          </button>
          <a href="/logout" class="topbar-btn danger">
            <i class="fas fa-sign-out-alt"></i>
            <span>Logout</span>
          </a>
        </div>
      </header>

      <section class="content">
        <div class="page-header">
          <h1><i class="fas fa-user-graduate"></i> Students</h1>
          <p class="subtitle">Manage your student roster, search, and bulk upload.</p>
        </div>

        <% if (success_msg && String(success_msg).trim() !== "") { %>
          <div class="alert success"><i class="fas fa-check-circle"></i> <%= success_msg %></div>
        <% } %>
        <% if (error_msg && String(error_msg).trim() !== "") { %>
          <div class="alert error"><i class="fas fa-exclamation-circle"></i> <%= error_msg %></div>
        <% } %>

        <div class="card">
          <div class="card-header">
            <h3 class="card-title"><i class="fas fa-search"></i> Search Students</h3>
          </div>
          <form action="/student/search" method="GET" class="form-row">
            <div class="form-group" style="flex: 1;">
              <input 
                type="text"
                name="q"
                class="form-input"
                placeholder="Search by name, grade, class or ID"
                value="<%= typeof query !== 'undefined' ? query : '' %>"
              >
            </div>
            <button type="submit" class="btn primary">
              <i class="fas fa-search"></i> Search
            </button>
            <a href="/student" class="btn outline"><i class="fas fa-rotate-left"></i> Reset</a>
          </form>
        </div>

        <div class="card">
          <div class="card-header">
            <h3 class="card-title"><i class="fas fa-plus"></i> Add Students</h3>
          </div>
          <div style="display: flex; gap: 1rem; flex-wrap: wrap; padding: 0.5rem 0; align-items: flex-start;">
            <!-- Left pane: Manual Add -->
            <div style="flex: 1; min-width: 200px;">
              <p style="margin-bottom: 0.5rem; font-weight: 600;"><i class="fas fa-user-plus"></i> Add Manually</p>
              <a href="/student/add" class="btn primary" style="width: 100%; justify-content: center;">
                <i class="fas fa-user-plus"></i> Add Student
              </a>
            </div>
            <!-- Right pane: CSV Upload -->
            <div style="flex: 1; min-width: 200px;">
              <p style="margin-bottom: 0.5rem; font-weight: 600;"><i class="fas fa-file-csv"></i> Bulk Upload via CSV</p>
              <form action="/student/upload" method="POST" enctype="multipart/form-data">
                <label for="csv" style="display: block; margin-bottom: 0.4rem; font-size: 0.85rem; opacity: 0.8;">Choose CSV file (columns: name, grade, student_class, gender, student_id)</label>
                <div style="display: flex; gap: 0.5rem; align-items: center;">
                  <input type="file" id="csv" name="csv" accept=".csv" class="form-input" required style="flex: 1;">
                  <button type="submit" class="btn secondary">
                    <i class="fas fa-upload"></i> Upload
                  </button>
                </div>
              </form>
            </div>
          </div>
        </div>

        <div class="card">
          <div class="card-header">
            <h3 class="card-title"><i class="fas fa-list"></i> Student List</h3>
            <span class="badge"><%= students.length %> students</span>
          </div>
          <div class="table-wrapper">
            <table>
              <thead>
                <tr>
                  <th>#</th>
                  <th>Name</th>
                  <th>Grade</th>
                  <th>Class</th>
                  <th>Gender</th>
                  <th>Student ID</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                <% if (students.length === 0) { %>
                  <tr><td colspan="7" class="empty-state">No students found.</td></tr>
                <% } else { %>
                  <% students.forEach((student, index) => { %>
                    <tr>
                      <td><%= index + 1 %></td>
                      <td><strong><%= student.name %></strong></td>
                      <td><span class="badge"><%= student.grade %></span></td>
                      <td><%= student.student_class %></td>
                      <td><%= student.gender %></td>
                      <td><code><%= student.student_id %></code></td>
                      <td>
                        <div class="table-actions">
                          <a href="/student/edit/<%= student.id %>" class="btn icon outline" title="Edit"><i class="fas fa-pen"></i></a>
                          <form action="/student/delete/<%= student.id %>" method="POST" class="inline" onsubmit="return confirm('Delete this student?')">
                            <button type="submit" class="btn icon danger" title="Delete"><i class="fas fa-trash"></i></button>
                          </form>
                        </div>
                      </td>
                    </tr>
                  <% }) %>
                <% } %>
              </tbody>
            </table>
          </div>
        </div>
      </section>

      <footer class="footer">
        Â© 2026 Primary School Performance System
      </footer>
    </main>
  </div>

  <script src="/js/main.js"></script>
</body>
</html>
