<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Mark Teacher Attendance | PSP</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/css/style.css">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">
  <link rel="icon" type="image/png" href="/assets/logo.png">
</head>
<body>
  <div class="app-shell">
    <div class="sidebar-overlay"></div>

    <aside class="sidebar">
      <div class="sidebar-header">
        <div class="sidebar-brand">
          <img src="/assets/logo.png" alt="Logo" class="sidebar-logo">
          <div>
            <div class="sidebar-brand-text"><%= user.username %></div>
            <div class="sidebar-brand-label">School Portal</div>
          </div>
        </div>
      </div>
      <nav class="sidebar-nav">
        <div class="nav-section">
          <div class="nav-section-title">Main</div>
          <a class="nav-link" href="/school/dashboard"><i class="fas fa-gauge-high"></i> Dashboard</a>
        </div>
        <div class="nav-section">
          <div class="nav-section-title">Management</div>
          <a class="nav-link" href="/student"><i class="fas fa-user-graduate"></i> Students</a>
          <a class="nav-link" href="/teacher"><i class="fas fa-chalkboard-user"></i> Teachers</a>
          <a class="nav-link" href="/resources"><i class="fas fa-boxes-stacked"></i> Resources</a>
        </div>
        <div class="nav-section">
          <div class="nav-section-title">Attendance</div>
          <a class="nav-link" href="/student-attendance"><i class="fas fa-clipboard-user"></i> Student Attendance</a>
          <a class="nav-link active" href="/teacher-attendance"><i class="fas fa-user-clock"></i> Teacher Attendance</a>
        </div>
        <div class="nav-section">
          <div class="nav-section-title">Account</div>
          <a class="nav-link logout" href="/logout"><i class="fas fa-right-from-bracket"></i> Logout</a>
        </div>
      </nav>
    </aside>

    <main class="main-content">
      <header class="topbar">
        <div class="topbar-left">
          <button class="mobile-menu-btn" aria-label="Toggle menu">
            <i class="fas fa-bars"></i>
          </button>
          <span class="page-title">Mark Teacher Attendance</span>
        </div>
        <div class="topbar-right">
          <button class="theme-toggle" aria-label="Toggle theme">
            <i class="fas fa-moon"></i>
            <i class="fas fa-sun"></i>
          </button>
          <a href="/teacher-attendance" class="topbar-btn">
            <i class="fas fa-calendar"></i>
            <span>Sessions</span>
          </a>
          <a href="/logout" class="topbar-btn danger">
            <i class="fas fa-sign-out-alt"></i>
            <span>Logout</span>
          </a>
        </div>
      </header>

      <section class="content">
        <div class="page-header">
          <h1><i class="fas fa-user-clock"></i> Mark Teacher Attendance</h1>
          <p class="subtitle">Select a date and record teacher attendance.</p>
        </div>

        <% if (success_msg && String(success_msg).trim() !== "") { %>
          <div class="alert success"><i class="fas fa-check-circle"></i> <%= success_msg %></div>
        <% } %>
        <% if (error_msg && String(error_msg).trim() !== "") { %>
          <div class="alert error"><i class="fas fa-exclamation-circle"></i> <%= error_msg %></div>
        <% } %>

        <!-- Biometric Feature Placeholder -->
        <div class="biometric-section">
          <div class="coming-soon-badge">
            <i class="fas fa-clock"></i> Coming Soon
          </div>
          <h3><i class="fas fa-fingerprint"></i> Biometric Attendance</h3>
          <p>We're working on adding fingerprint and facial recognition for faster, more accurate attendance tracking.</p>
          <div class="biometric-icons">
            <div class="biometric-icon">
              <i class="fas fa-fingerprint"></i>
              <span>Fingerprint</span>
            </div>
            <div class="biometric-icon">
              <i class="fas fa-face-smile"></i>
              <span>Face ID</span>
            </div>
            <div class="biometric-icon">
              <i class="fas fa-id-card"></i>
              <span>ID Card Scan</span>
            </div>
          </div>
        </div>

        <form method="POST" action="/teacher-attendance/mark">
          <div class="card">
            <div class="card-header">
              <h3 class="card-title"><i class="fas fa-calendar-day"></i> Select Date</h3>
              <span class="badge success">Auto-selected</span>
            </div>
            <div class="form-row" style="flex-wrap: wrap; align-items: flex-end;">
              <div class="form-group" style="flex:1; min-width: 200px;">
                <label><i class="fas fa-calendar-day"></i> Date</label>
                <input type="date" name="date" id="attendance-date" class="form-input" value="<%= selectedDate || '' %>" required>
                <small class="form-hint"><i class="fas fa-info-circle"></i> System auto-picks today's date</small>
              </div>
              <button type="submit" class="btn primary"><i class="fas fa-save"></i> Save Attendance</button>
            </div>
          </div>

          <div class="card" style="margin-top: 1rem;">
            <div class="card-header">
              <h3 class="card-title"><i class="fas fa-users"></i> Teacher List</h3>
              <span class="badge"><%= teachers ? teachers.length : 0 %> teachers</span>
            </div>
            <div class="table-wrapper">
              <table>
                <thead>
                  <tr>
                    <th>#</th>
                    <th>Name</th>
                    <th>Subject</th>
                    <th>EC#</th>
                    <th>Status</th>
                    <th>Late (min)</th>
                    <th>Left Early (min)</th>
                    <th>Reason / Notes</th>
                    <th>Excused?</th>
                  </tr>
                </thead>
                <tbody>
                  <% if (!teachers || !teachers.length) { %>
                    <tr><td colspan="9" class="empty-state">No teachers found.</td></tr>
                  <% } else { %>
                    <% teachers.forEach((teacher, idx) => { %>
                      <tr>
                        <td><%= idx + 1 %></td>
                        <td><strong><%= teacher.name %></strong></td>
                        <td><span class="badge success"><%= teacher.subject %></span></td>
                        <td><code class="ec-number"><%= teacher.teacher_id %></code></td>
                        <td>
                          <div class="radio-group">
                            <label class="radio-label success">
                              <input type="radio" name="status_<%= teacher.id %>" value="Present" checked> Present
                            </label>
                            <label class="radio-label danger">
                              <input type="radio" name="status_<%= teacher.id %>" value="Absent"> Absent
                            </label>
                          </div>
                        </td>
                        <td>
                          <input type="number" name="late_<%= teacher.id %>" class="form-input" min="0" step="1" placeholder="0" style="max-width:90px;">
                        </td>
                        <td>
                          <input type="number" name="early_<%= teacher.id %>" class="form-input" min="0" step="1" placeholder="0" style="max-width:90px;">
                        </td>
                        <td>
                          <input type="text" name="reason_<%= teacher.id %>" class="form-input" placeholder="Reason or note" style="min-width: 160px;">
                        </td>
                        <td style="text-align:center;">
                          <label class="checkbox-label">
                            <input type="checkbox" name="excused_<%= teacher.id %>"> Excused
                          </label>
                        </td>
                      </tr>
                    <% }) %>
                  <% } %>
                </tbody>
              </table>
            </div>
          </div>
        </form>
      </section>

      <footer class="footer">
        Â© 2026 Primary School Performance System
      </footer>
    </main>
  </div>

  <script src="/js/main.js"></script>
  <script>
    // Auto-pick today's date if no date is selected
    document.addEventListener('DOMContentLoaded', function() {
      const dateInput = document.getElementById('attendance-date');
      if (dateInput && !dateInput.value) {
        const today = new Date();
        const yyyy = today.getFullYear();
        const mm = String(today.getMonth() + 1).padStart(2, '0');
        const dd = String(today.getDate()).padStart(2, '0');
        dateInput.value = `${yyyy}-${mm}-${dd}`;
      }
    });
  </script>
</body>
</html>
