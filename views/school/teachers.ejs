<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Teachers | PSP</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/css/style.css">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">
  <link rel="icon" type="image/png" href="/assets/logo.png">
</head>
<body>
  <div class="app-shell">
    <div class="sidebar-overlay"></div>

    <aside class="sidebar">
      <div class="sidebar-header">
        <div class="sidebar-brand">
          <img src="/assets/logo.png" alt="Logo" class="sidebar-logo">
          <div>
            <div class="sidebar-brand-text"><%= user.username %></div>
            <div class="sidebar-brand-label">School Portal</div>
          </div>
        </div>
      </div>
      <nav class="sidebar-nav">
        <div class="nav-section">
          <div class="nav-section-title">Main</div>
          <a class="nav-link" href="/school/dashboard"><i class="fas fa-gauge-high"></i> Dashboard</a>
        </div>
        <div class="nav-section">
          <div class="nav-section-title">Management</div>
          <a class="nav-link" href="/student"><i class="fas fa-user-graduate"></i> Students</a>
          <a class="nav-link active" href="/teacher"><i class="fas fa-chalkboard-user"></i> Teachers</a>
          <a class="nav-link" href="/resources"><i class="fas fa-boxes-stacked"></i> Resources</a>
        </div>
        <div class="nav-section">
          <div class="nav-section-title">Attendance</div>
          <a class="nav-link" href="/student-attendance"><i class="fas fa-clipboard-user"></i> Student Attendance</a>
          <a class="nav-link" href="/teacher-attendance"><i class="fas fa-user-clock"></i> Teacher Attendance</a>
        </div>
        <div class="nav-section">
          <div class="nav-section-title">Account</div>
          <a class="nav-link logout" href="/logout"><i class="fas fa-right-from-bracket"></i> Logout</a>
        </div>
      </nav>
    </aside>

    <main class="main-content">
      <header class="topbar">
        <div class="topbar-left">
          <button class="mobile-menu-btn" aria-label="Toggle menu">
            <i class="fas fa-bars"></i>
          </button>
          <span class="page-title">Teachers</span>
        </div>
        <div class="topbar-right">
          <button class="theme-toggle" aria-label="Toggle theme">
            <i class="fas fa-moon"></i>
            <i class="fas fa-sun"></i>
          </button>
          <a href="/logout" class="topbar-btn danger">
            <i class="fas fa-sign-out-alt"></i>
            <span>Logout</span>
          </a>
        </div>
      </header>

      <section class="content">
        <div class="page-header">
          <h1><i class="fas fa-chalkboard-user"></i> Teachers</h1>
          <p class="subtitle">Maintain your staff list, search, and manage records.</p>
        </div>

        <% if (success_msg && String(success_msg).trim() !== "") { %>
          <div class="alert success"><i class="fas fa-check-circle"></i> <%= success_msg %></div>
        <% } %>
        <% if (error_msg && String(error_msg).trim() !== "") { %>
          <div class="alert error"><i class="fas fa-exclamation-circle"></i> <%= error_msg %></div>
        <% } %>

        <div class="card">
          <div class="card-header">
            <h3 class="card-title"><i class="fas fa-search"></i> Search Teachers</h3>
          </div>
          <form action="/teacher/search" method="GET" class="form-row">
            <div class="form-group" style="flex: 1;">
              <input 
                type="text" 
                name="q" 
                id="searchInput"
                class="form-input"
                placeholder="Search by name, subject or ID"
                value="<%= typeof query !== 'undefined' ? query : '' %>"
                autocomplete="off"
              >
            </div>
            <button type="submit" class="btn primary">
              <i class="fas fa-search"></i> Search
            </button>
            <a href="/teacher" class="btn outline"><i class="fas fa-rotate-left"></i> Reset</a>
          </form>
        </div>

        <div class="card">
          <div class="card-header">
            <h3 class="card-title"><i class="fas fa-plus"></i> Add Teachers</h3>
          </div>
          <div class="form-row" style="flex-wrap: wrap;">
            <a href="/teacher/add" class="btn primary">
              <i class="fas fa-user-plus"></i> Add Teacher
            </a>
            <form method="POST" action="/teacher/upload-csv" enctype="multipart/form-data" class="form-row" style="gap: 0.5rem;">
              <input type="file" name="csv" accept=".csv" class="form-input" required style="max-width: 250px;">
              <button type="submit" class="btn secondary">
                <i class="fas fa-upload"></i> Upload CSV
              </button>
            </form>
          </div>
        </div>

        <div class="card">
          <div class="card-header">
            <h3 class="card-title"><i class="fas fa-list"></i> Teacher List</h3>
            <span class="badge"><%= teachers.length %> teachers</span>
          </div>
          <div class="table-wrapper">
            <table>
              <thead>
                <tr>
                  <th>#</th>
                  <th>Full Name</th>
                  <th>Subject</th>
                  <th>Gender</th>
                  <th>Email</th>
                  <th>Phone</th>
                  <th>EC#</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                <% if (teachers.length === 0) { %>
                  <tr><td colspan="8" class="empty-state">No teachers found.</td></tr>
                <% } else { %>
                  <% teachers.forEach((teacher, index) => { %>
                    <tr>
                      <td><%= index + 1 %></td>
                      <td><strong><%= teacher.name %></strong></td>
                      <td><span class="badge success"><%= teacher.subject %></span></td>
                      <td><%= teacher.gender %></td>
                      <td><%= teacher.email %></td>
                      <td><%= teacher.phone %></td>
                      <td><code class="ec-number"><%= teacher.teacher_id %></code></td>
                      <td>
                        <div class="table-actions">
                          <a href="/teacher/edit/<%= teacher.id %>" class="btn icon outline" title="Edit"><i class="fas fa-pen"></i></a>
                          <form action="/teacher/delete/<%= teacher.id %>" method="POST" class="inline" onsubmit="return confirm('Delete this teacher?')">
                            <button type="submit" class="btn icon danger" title="Delete"><i class="fas fa-trash"></i></button>
                          </form>
                        </div>
                      </td>
                    </tr>
                  <% }) %>
                <% } %>
              </tbody>
            </table>
          </div>
        </div>
      </section>

      <footer class="footer">
        Â© 2026 Primary School Performance System
      </footer>
    </main>
  </div>

  <script src="/js/main.js"></script>
</body>
</html>
